<h1>Mejores hoteles</h1>
<div class="cartas">
{{#if hotels}}
{{#each hotels}}
            <div class="card">
                <div class="card-image waves-effect waves-block waves-light">
                </div>
                <img class="images" src="img/{{img}}">
                <div class="card-content">
  <span class="card-title activator grey-text text-darken-4">{{name}}<i class="material-icons right">Show more</i></span>
                </div>
                <div class="card-reveal">
            <span class="card-title grey-text text-darken-4">{{name}}<i class="material-icons right">close</i></span>
                    <table>
                        <tr>
                            <th>Name</th>
                            <th>Locality</th>
                            <th>Stars</th>
                            <th>Rating</th>
                            <th>Phone</th>
                        </tr>
                        <tr>
                            <th>{{name}}</th>
                            <th>{{locality}}</th>
                            <th>{{stars}}</th>
                            <th>{{rating}}</th>
                            <th>{{phone}}</th>
                        </tr>
                    </table>
                </div>
            </div>
    {{/each}}
{{else}}
    <p>Something's wrong</p>
{{/if}}
</div>
